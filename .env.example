# DepotGate Configuration
# Copy this file to .env and adjust values as needed

# Service
DEPOTGATE_SERVICE_NAME=depotgate
DEPOTGATE_HOST=0.0.0.0
DEPOTGATE_PORT=8000
DEPOTGATE_DEBUG=false

# Tenant (single tenant for v0)
DEPOTGATE_TENANT_ID=default

# PostgreSQL
DEPOTGATE_POSTGRES_HOST=localhost
DEPOTGATE_POSTGRES_PORT=5432
DEPOTGATE_POSTGRES_USER=depotgate
DEPOTGATE_POSTGRES_PASSWORD=depotgate
DEPOTGATE_POSTGRES_METADATA_DB=depotgate_metadata
DEPOTGATE_POSTGRES_RECEIPTS_DB=depotgate_receipts

# Storage
DEPOTGATE_STORAGE_BACKEND=filesystem
DEPOTGATE_STORAGE_BASE_PATH=./data/staging
DEPOTGATE_STORAGE_MAX_ARTIFACT_SIZE_MB=100

# Sinks
DEPOTGATE_ENABLED_SINKS=filesystem
DEPOTGATE_SINK_FILESYSTEM_BASE_PATH=./data/shipped
DEPOTGATE_SINK_HTTP_TIMEOUT_SECONDS=30

# Authentication
# API key for REST endpoint authentication (use dp_ prefix by convention)
DEPOTGATE_API_KEY=dp_your-secret-api-key-here

# Allow insecure dev mode - ONLY for local development
DEPOTGATE_ALLOW_INSECURE_DEV=false
